{
  "name": "dkwds-docs",
  "version": "1.0.0",
  "description": "Website and documentation on using the Frontend Styleguide",
  "scripts": {
    "build": "gulp build && bundle exec jekyll build",
    "build-css": "gulp sass",
    "build-js": "gulp javascript",
    "build-img": "gulp images",
    "build-fonts": "gulp fonts",
    "build-html": "gulp html",
    "clean": "gulp clean-assets",
    "lint": "gulp eslint scss-lint",
    "postinstall": "bundle",
    "prestart": "gulp build",
    "start": "bundle exec jekyll serve",
    "test": "npm run lint && npm run crawl && bundle exec rspec",
    "crawl": "node config/crawl.js",
    "watch": "nswatch",
    "publish": "gulp build && bundle exec jekyll build && gulp publish"
  },
  "watch": {
    "./css/**/*.scss": [
      "build-css"
    ],
    "./img": [
      "build-img"
    ],
    "./js/**/*.js": [
      "build-js"
    ],
    "./node_modules/dkwds/src/stylesheets": [
      "build-css"
    ],
    "./node_modules/dkwds/src/fonts": [
      "build-fonts"
    ],
    "./node_modules/dkwds/src/img": [
      "build-img"
    ],
    "./node_modules/dkwds/src/js": [
      "build-js"
    ]
  },
  "dependencies": {
    "browserify": "^13.0.0",
    "chalk": "^1.1.3",
    "del": "^2.2.0",
    "express": "^4.15.3",
    "gulp": "^3.9.0",
    "gulp-clean": "^0.3.1",
    "gulp-concat": "^2.6.0",
    "gulp-eslint": "^1.1.1",
    "gulp-modify-file": "^1.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-scss-lint": "^0.3.9",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^1.5.1",
    "gulp-util": "^3.0.7",
    "jquery": "^2.2.0",
    "js-cookie": "^2.2.0",
    "mdi": "^2.0.46",
    "merge-stream": "^1.0.0",
    "node-notifier": "^4.6.0",
    "normalize.css": "^3.0.3",
    "nswatch": "^0.2.0",
    "politespace": "^0.1.4",
    "run-sequence": "^1.1.5",
    "simplecrawler": "^1.1.3",
    "uswds": "1.2.1",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0"
  },
  "devDependencies": {
    "gulp-count": "^0.3.0",
    "gulp-plumber": "^1.1.0",
    "gulp-remote-src": "^0.4.3"
  }
}
